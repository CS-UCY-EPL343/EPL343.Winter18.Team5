<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorBackground">@color/colorRallyBlack</item>
        <item name="android:panelColorBackground">@color/colorBlackLight</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorPrimaryDisableOnly">@color/colorRallyWhite</item>
        <item name="colorPrimary">@color/colorRallyGreen</item>
        <item name="colorPrimaryDark">@color/colorRallyDarkGreen</item>
        <item name="colorError">@color/colorRallyOrange</item>
        <item name="colorFloat">@color/colorRallyYellow</item>
        <item name="colorAccent">@color/colorRallyPurple</item>
        <item name="colorAccentAlt">@color/colorRallyBlue</item>
    </style>


    <style name="HighContrast">
        <item name="colorBackgroundAlt">@color/colorRallyBlack</item>
        <item name="colorTextAlt">@color/colorWhite</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryAlt">@color/colorPrimary</item>
        <item name="colorRallyOrange">@color/colorRallyOrange</item>
        <item name="colorRallyYellow">@color/colorRallyOrange</item>
        <item name="colorRallyPurple">@color/colorRallyOrange</item>
        <item name="colorRallyBlue">@color/colorRallyOrange</item>
    </style>



</resources>
